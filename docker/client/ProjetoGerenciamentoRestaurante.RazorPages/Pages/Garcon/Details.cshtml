@page "{id:int}"
@model ProjetoGerenciamentoRestaurante.RazorPages.Pages.Garcon.Details

<h1>Detalhes do Gar√ßom: @Model.GarconModel.Nome</h1>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<div class="info">
    <p><strong>Nome: </strong> @Model.GarconModel.Nome </p>
    <p><strong>Sobrenome: </strong> @Model.GarconModel.Sobrenome </p>
    <p><strong>CPF: </strong> @Model.GarconModel.Cpf </p>
    <p><strong>Telefone: </strong> @Model.GarconModel.Telefone </p>
