@page "{id:int}"
@model ProjetoGerenciamentoRestaurante.RazorPages.Pages.Mesa.Details
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<h1>Detalhes do Mesa: @Model.MesaModel.Numero</h1>

<div class="info">
    <p><strong>NÃºmero: </strong> @Model.MesaModel.Numero </p>
    <p><strong>Status: </strong> 
    @if (@Model.MesaModel.Status){
        <bm>Mesa Ocupada</bm>
    } 
    else 
    {
        <bm>Mesa Desocupada</bm>
    }</p>
    <p><strong>Hora da Abertura: </strong> @Model.MesaModel.HoraAbertura </p>
