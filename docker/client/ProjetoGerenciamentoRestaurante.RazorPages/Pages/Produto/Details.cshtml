@page "{id:int}"
@model ProjetoGerenciamentoRestaurante.RazorPages.Pages.Produto.Details
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<h1>Detalhes do Produto:</h1>
<h2> @Model.ProdutoModel.Nome</h2>

<div class="info">
    <p><strong>Categoria: </strong> @Model.ProdutoModel.Categoria!.Nome </p>
    <p><strong>Descrição: </strong> @Model.ProdutoModel.Descricao </p>
    <p><strong>Valor Unitário: R$</strong> @Model.ProdutoModel.Preco </p>
    <a class="btn btn-sm btn-secondary active" asp-page="./Edit" asp-route-id="@Model.ProdutoModel.ProdutoId"> <i class="fa fa-pencil"></i>  </a>
    <a class="btn btn-secondary btn-sm btn-danger" asp-page="./Delete" asp-route-id="@Model.ProdutoModel.ProdutoId"> <i class="fa fa-trash"></i> </a>
</div>

<p style="text-align:center"><a class="btn btn-primary" role="button" asp-page="Index"> <strong>Voltar</strong></a></p>

<style>
    main{
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 10px;
    }

    .info{
        width: 60vw;
        text-align: left;
        background-color: rgb(201, 201, 201);
        padding: 10px;
        border-radius: 5px;
    }
</style>