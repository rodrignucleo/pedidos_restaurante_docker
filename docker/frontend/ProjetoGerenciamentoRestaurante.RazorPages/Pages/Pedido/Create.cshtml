@page "{id:int}"
@model ProjetoGerenciamentoRestaurante.RazorPages.Pages.Pedido.Create
<h1 align="center">Fazer um Pedido</h1>

<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-dange"> </div>
            <input type="hidden" asp-for="PedidoModel.PedidoId"/>

            <label asp-for="PedidoModel.AtendimentoId">Número do Atendimento</label>
            <input asp-for="PedidoModel.AtendimentoId" value="@Model.AtendimentoModel.AtendimentoId" class="form-control" readonly="readonly"/>
            <span asp-validation-for="PedidoModel.AtendimentoId" class="text-danger"></span>

            <label >Nome do Garçom</label></br>
            <select class="form-control" asp-for="PedidoModel.GarconId">
            <option value="">Selecione um Garçom</option>
            @foreach (var garconModel in Model.GarconList)
            {
                <option value="@garconModel.GarconId">@garconModel.Nome @garconModel.Sobrenome</option>
            }
            </select>

            <label asp-for="PedidoModel.HorarioPedido">Hora do Pedido</label>
            <input asp-for="PedidoModel.HorarioPedido" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm:ss")" asp-format="{0:yyyy-MM-ddTHH:mm:ss}" />
            @* <input asp-for="PedidoModel.HorarioPedido" class="form-control" value=null /> *@
            <span asp-validation-for="PedidoModel.HorarioPedido" class="text-danger"></span>

            <div class="row">
                <div class="col col-md-9">
                    <label>Qual o produto?</label></br>
                    <select class="form-control" asp-for="PedidoProdutoModel.ProdutoId">
                        <option value="">Selecione</option>
                        @foreach (var produtoModel in Model.ProdutoList)
                        {
                            <option value="@produtoModel.ProdutoId">@produtoModel.Nome - R$@produtoModel.Preco</option>
                        }
                    </select>
                </div>
                <div class="col col-md-3">
                    <label asp-for="PedidoProdutoModel.Quantidade"></label>
                    <input asp-for="PedidoProdutoModel.Quantidade" type="number" value="1" class="form-control"/>
                    <span asp-validation-for="PedidoProdutoModel.Quantidade" class="text-dange"></span>
                </div>
            </div>

            <div class="form-group">
                <br>
                <input type="submit" class="btn btn-primary" value="Salvar"/>
                <a asp-page="/Atendimento/Details" asp-route-id="@Model.AtendimentoModel.AtendimentoId" class="btn btn-secondary"> Cancelar</a>
            </div>

            <div class="form-group">

        </form>
    </div>
</div>
