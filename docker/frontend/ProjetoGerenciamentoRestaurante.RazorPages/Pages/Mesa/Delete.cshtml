@page "{id:int}"
@model ProjetoGerenciamentoRestaurante.RazorPages.Pages.Mesa.Delete

<div align="center">
    <div>
    <h1>Deseja realmente remover a mesa?</h1>

    <p><strong>Numero:</strong> @Model.MesaModel.Numero </p>
    <p><strong>Hora de Abertura:</strong> @Model.MesaModel.HoraAbertura </p>
    </div>

    <form method="post">
        <div class="form-group">
            <input type="submit" value="Sim" class="btn btn-danger"/>
            <a asp-page="/Mesa/Index" class="btn btn-primary"> Voltar</a>
        </div>
    </form>
</div>